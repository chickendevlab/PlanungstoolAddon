{
    "name": "Planungstool-Addon",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "Dieses Addon bindet die wichtigsten Funktionen von https://www.planungstool-fsg.de/ direkt in LernSax ein!",
    "icons": {
        "128": "./icon/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.lernsax.de/*",
                "https://planungstool-fsg.de/*"
            ],
            "js": [
                "./scripts/misc/jquery.js",
                "./scripts/content/loadConferences.js",
                "./scripts/content/statusPage.js",
                "./scripts/content/utils.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
        "storage",
        "https://*/"
    ],
    "browser_action": {
        "default_popup": "./popup/index.html"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "addon@planungstool-fsg.de",
          "update_url": "https://chickendevlab.github.io/PlanungstoolAddon/dist/firefox/versions.json"
        }
      }
      
}